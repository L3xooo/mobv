<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.IntroFragment"
        android:label="Intro">
        <action
            android:id="@+id/action_intro_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_intro_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_intro_to_people"
            app:destination="@id/peopleFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.auth.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_forget_password"
            app:destination="@id/forgetPasswordFragment" />

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_login_to_profile"
            app:destination="@id/profileFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.auth.RegisterFragment"
        android:label="Signup" >

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />

    </fragment>

    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.auth.ForgetPasswordFragment"
        android:label="ForgetPassword">

        <action
            android:id="@+id/action_forget_password_to_login"
            app:destination="@id/loginFragment" />

    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.MapFragment"
        android:label="Map">

        <action
            android:id="@+id/action_map_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.ProfileFragment"
        android:label="Profile">
        <argument
            android:name="userId"
            app:argType="string"
            android:defaultValue=""
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/peopleFragment"
        android:name="eu.mcomputing.mobv.zadanie.ui.fragments.PeopleFragment"
        android:label="People">
        <action
            android:id="@+id/action_people_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>
